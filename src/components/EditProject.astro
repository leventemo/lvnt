---
import type { CollectionEntry } from "astro:content";
import IconEdit from "@/assets/icons/IconEdit.svg";
import { SITE } from "@/config";

export interface Props {
  hideEditPost?: CollectionEntry<"projects">["data"]["hideEditPost"];
  class?: string;
  project: CollectionEntry<"projects">;
}

const { hideEditPost, project, class: className = "" } = Astro.props;

const href = `${SITE.editPost.url}${project.filePath}`;
const showEditPost =
  SITE.editPost.enabled && !hideEditPost && href.trim() !== "";
---

{
  showEditPost && (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[
        "flex justify-baseline gap-1.5 opacity-80 hover:text-accent",
        className,
      ]}
    >
      <span aria-hidden="true" class="max-sm:hidden">
        |
      </span>
      <IconEdit class="inline-block" />
      <span>{SITE.editPost.text}</span>
    </a>
  )
}
